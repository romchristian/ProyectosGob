<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <!--    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>nandepy</param-value>
    </context-param>-->
    <context-param>
        <param-name>serverDir</param-name>
        <param-value>http://localhost:8080/FileUpload/</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>main/home.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/login.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>java.sql.SQLException</exception-type>
        <location>/errorSQL.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/login.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>ConstraintAdmin</display-name>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <description/>
            <url-pattern>/main/home.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>ver_proyecto</role-name>
            <role-name>editar_proyecto</role-name>
            <role-name>configuraciones</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ConstraintVer</display-name>
        <web-resource-collection>
            <web-resource-name>Ver</web-resource-name>
            <description/>
            <url-pattern>/main/proyecto/List</url-pattern>
            <url-pattern>/main/proyecto/View</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>ver_proyecto</role-name>
            <role-name>editar_proyecto</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ConstraintEditar</display-name>
        <web-resource-collection>
            <web-resource-name>Editar</web-resource-name>
            <description/>
            <url-pattern>/main/proyecto/Create</url-pattern>
            <url-pattern>/main/proyecto/Edit</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>editar_proyecto</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ConstraintConfiguraciones</display-name>
        <web-resource-collection>
            <web-resource-name>Configuraciones</web-resource-name>
            <description/>
            <url-pattern>/main/configuraciones/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>configuraciones</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>NandePyJDBC</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>ver_proyecto</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>editar_proyecto</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>configuraciones</role-name>
    </security-role>
</web-app>
